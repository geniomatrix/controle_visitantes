{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Chrome",
            "port": 9222,
            "request": "attach",
            "type": "chrome",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "--noreload"
            ],
            "django": true,
            "console": "integratedTerminal",
            "justMyCode": false,   // Para incluir bibliotecas de terceiros no debugging, se necess√°rio
            "env": {
                "DJANGO_SETTINGS_MODULE": "controle_visitantes.settings"
            }
        }
    ]
}
